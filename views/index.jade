extends layout

block content
  include navbar
  
  // CONTAINER
  div.container.separator
    
    div.jumbotron
      h1= title
      p Welcome to #{title}
      p This example is a quick exercise to illustrate how the default, static and fixed to top navbar work. It includes the responsive CSS and HTML, so it also adapts to your viewport and device.
    
    div.jumbotron
      div.form-horizontal.signup-form(role="form")
          form(method="post", id="loginForm", action="/dashboard")
            h2 Please sign in
            div.form-group
                label.col-sm-2.control-label Username
                div.col-sm-4
                  input.form-control(id="username", size="30", maxlength="30", type="text", name="username", placeholder="Username")    
            div.form-group
                label.col-sm-2.control-label Password
                div.col-sm-4
                  input.form-control(id="password", type="password", name="password", placeholder="Password")
            div.col-sm-6
                button.btn.btn-primary.pull-right(type="submit") Sign in

  div.footer
      include footer
